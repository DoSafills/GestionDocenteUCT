# Configuración de Base de Datos PostgreSQL
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=gestion_docente_uct

# Configuración para Tests
TEST_DATABASE_USER=postgres
TEST_DATABASE_PASSWORD=your_password
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5432
TEST_DATABASE_NAME=gestion_docente_test

# Debug SQL queries (true/false)
SQL_DEBUG=false

# Configuración de aplicación
APP_NAME=GestionDocenteUCT
APP_VERSION=1.0.0
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security (si decides agregar autenticación más tarde)
