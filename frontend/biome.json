{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "semicolons": "always",
      "arrowParentheses": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 4
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "expand": "auto"
    }
  }
}
